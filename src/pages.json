{
	"easycom": {
		"autoscan": true,
		// 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "新增账单"
			}
		},
		{
			"path": "pages/goodsList/goodsList",
			"style": {
				"navigationBarTitleText": "商品列表"
			}
		},
		{
			"path": "pages/billDetail/billDetail",
			"style": {
				"navigationBarTitleText": "账单详情"
			}
		},
		{
			"path": "pages/billList/billList",
			"style": {
				"navigationBarTitleText": "账单列表"
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/home/home",
				"text": "新增账单"
			},
			// {
			// 	"pagePath": "pages/goodsList/goodsList",
			// 	"text": "商品列表"
			// }
			{
				"pagePath": "pages/billList/billList",
				"text": "账单列表"
			},
			{
				"pagePath": "pages/user/user",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
